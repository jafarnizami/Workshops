<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:elevation="5dp"
                                                   android:layout_margin="@dimen/grid_3x"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <TextView
            android:id="@+id/workshopheading"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:text="WORKSHOP NAME"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/worshoptext"
            android:textSize="20sp"
            android:text="Tweet Text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/workshopheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    <TextView
            android:id="@+id/workshopDate"
            android:text="Date"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/worshoptext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button android:layout_width="wrap_content"
            android:id="@+id/mybutton"
            android:text="Apply"
            app:layout_constraintTop_toBottomOf="@id/workshopDate"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>